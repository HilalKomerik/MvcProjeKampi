@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post)) //Başlangıç formu ekleme ve güncelleme işlemlerinde kullanılır.("Üzerinde çalıştığım sayfanın ismi","üzerinde çalıştığım controller",formMethodun değeri ne zaman çalışsın.)
{
    <div class="form-group">
        @Html.Label("Kategory Adı")
        @Html.TextBoxFor(x => x.CategoryName,new {@class=" form-control"}) <!--inputu TextBoxFordan almak daha doğru oluyor-->
        @Html.ValidationMessageFor(x => x.CategoryName) <!--Hataları gösterelim-->
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = " form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br /><br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}